# some burned aliases may be banned. Send them to the spam mailbox so
# bayesian filters get to learn something

system_aliases_banned:
  debug_print = "R: system_aliases_banned check for $local_part@$domain"
  driver = redirect
  domains = +local_domains
  require_files = /etc/aliases.ban
  data = ${lookup{$local_part}lsearch{/etc/aliases.ban}}


# counterpart of the later shopping_catchall
system_aliases_banned_wtf:
  debug_print = "R: system_aliases_banned check for [wtf-]$local_part@plow"
  driver = redirect
  domains = plow.rien.pl : plow.attique.org
  local_part_prefix = wtf-
  require_files = /etc/aliases.ban
  data = ${lookup{$local_part}lsearch{/etc/aliases.ban}}