# a specific domain was set to catchall mails from shopping website
# this catchall is prefiltered with the aliases.ban list
shopping_catchall:
  debug_print = "R: shopping_catchall for [wtf-]$local_part[.*]@plow"
  driver = redirect
  local_part_prefix = wtf-
  local_part_suffix = .*
  domains = plow.rien.pl
  condition = ${if exists{/etc/aliases.d/rien.pl}}
  data = ${lookup{$local_part}lsearch{/etc/aliases.d/rien.pl}}
  file_transport = address_file

shopping_catchall_DEPRECATED:
  debug_print = "R: shopping_catchall for [wtf-]$local_part[.*]@plow OBSOLETE"
  driver = redirect
  local_part_prefix = wtf-
  local_part_suffix = .*
  domains = plow.attique.prg
  condition = ${if exists{/etc/aliases.d/attique.org}}
  data = ${lookup{$local_part}lsearch{/etc/aliases.d/attique.org}}
  file_transport = address_file
