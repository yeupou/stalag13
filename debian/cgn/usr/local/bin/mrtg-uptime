# !/bin/sh
#
# Mathieu Roy <yeupou@gnu.org>
# This script give an estimation in hours of the uptime, ready to be
# parsed by mrtg.
# The second entry is the load average
# It should work on any GNU/Linux system.

export LC_ALL=C
cat /proc/stat | grep cpu\   | awk {'print ($2 + $3 + $4 + $5) / (100 * 3600)'}
echo 0
uptime|sed 's,.*up ,,'|sed 's/, [0-9]* users.*//'
hostname
